             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="JogoDoCalculo.Dificuldade"
             Title="Escolha a Dificuldade">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Fácil" Clicked="BotaoFacil"/>
            <Button Text="Médio" Clicked="BotaoMedio"/>
